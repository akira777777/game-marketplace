# Environment variables for deployment
# Copy this file to .env and modify values as needed

# Environment
ENVIRONMENT=production

# Database Configuration (Neon PostgreSQL)
# DATABASE_URL=postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=

# Application Configuration
APP_NAME=GameMarketplace API
VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your_very_secure_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production

# CORS Configuration - Add your frontend URL
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# File Upload Configuration
UPLOAD_DIR=/app/static/uploads
MAX_FILE_SIZE=10485760

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# External Services (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Monitoring (optional)
SENTRY_DSN=https://your_sentry_dsn_here